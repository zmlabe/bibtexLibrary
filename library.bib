@article{trenberth_and_guillemont96,
abstract = {An analysis of the spring-summer 1988 drought: and
1993 floods over North America reveals a reversal in
the sign of anomalies in several fields. Large sea
surface temperature anomalies of opposite signs
existed in the tropical Pacific with strong La Nina
conditions in 1988 and a mature EI Nino in 1993. The
