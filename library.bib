author = {Vicente-Serrano, Sergio M and Lopez-Moreno, Juan I and Gimeno, Luis and Nieto, Raquel and Moran-Tejeda, Enrique and Lorenzo-Lacruz, Jorge and Begueria, Santiago and Azorin-Molina, Cesar},
