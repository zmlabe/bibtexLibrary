doi = {10.5194/wcd-2019-11},
file = {:Users/zlabe/Library/Application Support/Mendeley Desktop/Downloaded/Yu et al. - Unknown - Intermittency of Arctic-midlatitude teleconnections stratospheric pathway between autumn sea ice and the winter NA.pdf:pdf},
