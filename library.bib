   keywords = {climate,ocean reanalysis},
   month = {9},
   pages = {6891-6910},
   publisher = {Blackwell Publishing Ltd},
   title = {An ensemble of ocean reanalyses for 1815-2013 with sparse observational input},
   volume = {121},
   url = {http://doi.wiley.com/10.1002/2016JC012079},
   year = {2016},
}
@misc{Compo2011a,
