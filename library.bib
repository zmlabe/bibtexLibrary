   month = {8},
   pages = {3681-3703},
   publisher = {AMER METEOROLOGICAL SOC},
   title = {Coupled model simulations of the west African monsoon system: Twentieth- and Twenty-First-century simulations},
   volume = {19},
   year = {2006},
}
@article{laird98_moon_lake_decadal,
   abstract = {Diatom assemblages preserved in sediment cores from
