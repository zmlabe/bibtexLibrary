issn = {1748-9326},
journal = {Environmental Research Letters},
number = {2},
pages = {024015},
title = {{Reconstruction of false spring occurrences over the southeastern United States, 1901–2007: an increasing risk of spring freeze damage?}},
volume = {6},
year = {2011}
}
