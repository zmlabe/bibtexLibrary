author = {Trenberth, K E and Stepaniak, D P},
journal = {Journal of Climate},
month = {nov},
number = {22},
pages = {3706--3722},
publisher = {AMER METEOROLOGICAL SOC},
title = {{Seamless poleward atmospheric energy transports and implications for the Hadley circulation}},
volume = {16},
