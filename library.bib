doi = {10.5194/GMD-9-3461-2016},
file = {:Users/zlabe/Library/Application Support/Mendeley Desktop/Downloaded/O'Neill et al. - 2016 - The Scenario Model Intercomparison Project (ScenarioMIP) for CMIP6.pdf:pdf},
journal = {Geoscientific Model Development},
month = {sep},
number = {9},
pages = {3461--3482},
publisher = {Copernicus GmbH},
title = {{The Scenario Model Intercomparison Project (ScenarioMIP) for CMIP6}},
volume = {9},
year = {2016}
