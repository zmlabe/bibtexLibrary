   issue = {13},
   journal = {Journal of Geophysical Research: Atmospheres},
   keywords = {CESM2,CMIP6,evaluation,extratropical variability,large,modeling,scale circulation},
   month = {7},
   pages = {e2020JD032835},
   publisher = {John Wiley & Sons, Ltd},
   title = {An Evaluation of the Large-Scale Atmospheric Circulation and Its Variability in CESM2 and Other CMIP Models},
   volume = {125},
