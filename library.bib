doi = {10.5194/GMD-10-3329-2017},
file = {:Users/zlabe/Library/Application Support/Mendeley Desktop/Downloaded/Van Marle et al. - 2017 - Historic global biomass burning emissions for CMIP6 (BB4CMIP) based on merging satellite observations with pro.pdf:pdf},
