   doi = {10.1016/j.quascirev.2013.03.009},
   issn = {02773791},
   journal = {Quaternary Science Reviews},
   keywords = {Atlantic Multidecadal Oscillation,Little Ice Age,North Atlantic Oscillation,Spectral Analysis,Varves},
   month = {6},
   pages = {142-154},
   title = {Evolution of NAO and AMO strength and cyclicity derived from a 3-ka varve-thickness record from Iceland},
