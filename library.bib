@article{Liu2021a,
abstract = {However, the dynamic model forecasting of the IOD at lead times longer than 3 months exhibits very limited skill, though some studies indicate that predicting the IOD 7 months in advance is theoretically possible (Becker et al., 2014; Liu et al., 2017; Shi et al., 2012; Wu {\&} Tang, 2019); this indicates that more meaningful precursors for IOD development must be discovered. Convolutional neural networks (CNNs) of deep learning are nonlinear in nature and excel at processing spatial architectures (Krizhevsky et al., 2012; LeCun et al., 2015; Zeiler {\&} Fergus, 2014), for example, SSTA or heat content (HC) patterns, which makes them compatible for unveiling implications between current climate conditions and their ensuing evolution. Furthermore, the successful application of deep learning in climate science, such as multi-year ENSO forecasts (Ham et al., 2019), rainfall prediction (Lee et al., 2018; Sahai et al., 2000), and the downscaling of parameters (Rasp et al., 2018) in climate models, has inspired the authors of the present study to review the significance of statistical methods. Considering deep learning techniques as a new methodology of statistical refinement based on climatic information, this study presents an attempt to forecast the IOD using CNNs with SSTA maps derived from reanalysis data. For comparison , IOD prediction by dynamic models in the North American Multi-Model Ensemble (NMME) (Kirtman et al., 2014), an experimental multi-model seasonal forecasting system consisting of coupled models from research and operational centers in the USA and Canada (see Section 3), is examined as well. Also note that when it comes to the predictability of the IOD, there has been a long debate concerning the physical relation between ENSO and IOD. Some studies indicate that the IOD is an intrinsic climate variability independent of the ENSO (Behera et al., 2006; Saji et al., 1999; Webster et al., 1999), while some others argue that IOD can be externally forced by ENSO (Stuecker et al., 2017; Zhao et al., 2019). There is no doubt that the ENSO has its influence on the IOD, but the way in which ENSO operates is still under investigation (to drive the IOD, to enhance/weaken the IOD or both). In addition, the architecture and algorithm of the classic CNN model make it difficult to balance the contribution to the predicted Dipole Mode Index (DMI) between the Pacific Ocean and the Indian Ocean, if a global SSTA map is used as input (see Supporting Information S1). Thus, as a preliminary exploration of CNN-based IOD forecasts, we initiate the IOD prediction only using the Indian Ocean SSTA in this study. 2. Methods 2.1. Deep Learning Techniques The architecture of CNN applied in this study is shown in Figure S4 in Supporting Information S1. Our CNN model has two convolutional layers and two average pooling layers. The number of filters in each convolutional layer varies from 10 to 12. The average pooling layer extract features in 2 × 2 grid while the filters do in 3 × 3 grid. Subsequent fully connected layer has 8-10 neurons. The final output layer is in one-dimension as a regression is needed to produce a DMI. So there exists 27 combinations of architecture of CNN models, which are C10C10D8, C10C10D9, C10C10D10, C10C11D8, etc. (C and D denote convolu-tional layer and fully connected layer, respectively). The batch (the number of samples we feed the CNN one updating step) of every updating step is 24 (We tried 12, 24, 48, and whole batch. The results are all alike so you can select whichever you prefer.). However, the learning rate (LR) is quite important, which needs to be dealt with carefully. For each one of those 27 CNN models, we apply a range of LR from 0.05 to 0.0001 to train them (the specific LRs are 0.05, 0.04, 0.03, 0.02, 0.01, 0.009, 0.008, 0.007, 0.006, 0.005, 0.004, 0.003, 0.002, 0.001, 0.0009, 0.0008, 0.0007, 0.0006, 0.0005, and 0.0001). It is clear that different architecture of CNN model favors different LRs to yield their highest skills. After the training period, we choose the model with the highest skill to produce DMI in validation period for each one of those 27 CNN models. Though our test proves that every single CNN model can predict IOD well, the ensemble mean of output of 27 CNN models is still used as the final predicted DMI. The required software for deep learning are Python 3.6, Keras 2.3.0, TensorFlow 2.2.0, NumPy 1.17.0, SciPy 1.4.1, and MATLAB 2018. The required software for plotting figures are Matplotlib 3.0.0 and Basemap 1.2.1.},
author = {Liu, Jun and Tang, Youmin and Wu, Yanling and Li, Tang and Wang, Qiang and Chen, Dake},
doi = {10.1029/2021GL094407},
file = {:Users/zlabe/Library/Application Support/Mendeley Desktop/Downloaded/Liu et al. - 2021 - Forecasting the Indian Ocean Dipole With Deep Learning Techniques.pdf:pdf},
issn = {1944-8007},
journal = {Geophysical Research Letters},
keywords = {convolutional neuron network,deep learning,sea surface temperature anomaly,statistical method,the Indian Ocean Dipole forecasts,triggering mechanism for IOD},
month = {oct},
number = {20},
pages = {e2021GL094407},
publisher = {John Wiley {\&} Sons, Ltd},
title = {{Forecasting the Indian Ocean Dipole With Deep Learning Techniques}},
url = {https://agupubs.onlinelibrary.wiley.com/doi/10.1029/2021GL094407},
volume = {48},
year = {2021}
