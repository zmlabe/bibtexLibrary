author = {Yoon, Jin-Ho and Zeng, Ning},
doi = {10.1007/s00382-009-0551-6},
journal = {Climate Dynamics},
keywords = {Climate variability; Amazon rainfall; Atlantic Oce},
month = {feb},
number = {2-3},
pages = {249--264},
publisher = {SPRINGER},
title = {{An Atlantic influence on Amazon rainfall}},
volume = {34},
year = {2010}
}
