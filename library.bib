@article{torrence98,
   abstract = {A practical step-by-step guide to wavelet analysis
is given, with examples taken from time series of
the El Nino-Southern Oscillation (ENSO). The guide
includes a comparison to the windowed Fourier
transform, the choice of an appropriate wavelet
basis function, edge effects due to finite-length
