   issn = {0894-8755},
   issue = {21},
   journal = {Journal of Climate},
   keywords = {Climate prediction,Forecasting techniques,General circulation models,Hurricanes,Hurricanes/typhoons,Seasonal forecasting},
   month = {11},
   pages = {7994-8016},
   publisher = {American Meteorological Society},
   title = {On the Seasonal Forecasting of Regional Tropical Cyclone Activity},
