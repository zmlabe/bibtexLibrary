   title = {Solar influence on climate during the past millennium: Results from transient simulations with the NCAR Climate System Model},
   volume = {104},
   year = {2007},
}
@article{cole93,
   abstract = {In the western tropical Pacific, the interannual
migration of the Indonesian Low convective system
causes changes in rainfall that dominate the
regional signature of the El Nino-Southern
