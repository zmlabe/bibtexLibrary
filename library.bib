   publisher = {AMER METEOROLOGICAL SOC},
   title = {Short-term climate variations: Recent accomplishments and issues for future progress},
   volume = {78},
   year = {1997},
}
@article{sun98,
   abstract = {Utilizing radiation data from Earth Radiation Budget
