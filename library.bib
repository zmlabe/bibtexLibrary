@article{mann_and_emanuel06_hurricanes,
   abstract = {Increases in key measures of Atlantic hurricane
activity over recent decades are believed to
reflect, in large part, contemporaneous increases in
tropical Atlantic warmth \\\{[$\backslash$\\}e.g., Emanuel,
2005$\backslash$\\{]\}. Some recent studies \\\{[$\backslash$\\}e.g., Goldenberg
et al., 2001$\backslash$\\{]\} have attributed these increases to
