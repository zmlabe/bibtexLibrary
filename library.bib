   journal = {Climatic Change},
   keywords = {western united-states climate-change snowmelt runo},
   note = {W05415},
   pages = {293-315},
   title = {Multi-century tree-ring reconstructions of Colorado streamflow for water resource planning},
   volume = {78},
   year = {2006},
}
@article{durack10,
   abstract = {Using over 1.6 million profiles of salinity,
potential temperature, and neutral density from
historical archives and the international Argo
Program, this study develops the three-dimensional
field of multidecadal linear change for ocean-state
properties. The period of analysis extends from 1950
