journal = {Atmospheric Chemistry and Physics},
number = {13},
title = {{On the climate sensitivity and historical warming evolution in recent coupled model ensembles}},
volume = {20},
year = {2020}
}
@article{darrigo05_enso,
abstract = {The instrumental record is too brief for evaluation
of the El Nino-Southern Oscillation (ENSO) system
