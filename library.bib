@article{laird96,
   abstract = {Estimates of past lake-water salinity from fossil
diatom assemblages were used to infer past climatic
conditions at Moon Lake, a climatically sensitive
site in the northern Great Plains. A good
correspondence between diatom-inferred salinity and
historical records of mean annual precipitation
