   issue = {D7-8},
   journal = {Journal of Geophysical Research-Atmospheres},
   keywords = {global temperatures; ENSO; delayed oscillator; tel},
   month = {4},
   pages = {4065},
   publisher = {AMER GEOPHYSICAL UNION},
   title = {Evolution of El Nino-Southern Oscillation and global atmospheric surface temperatures},
