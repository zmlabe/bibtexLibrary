file = {:Users/zlabe/Library/Application Support/Mendeley Desktop/Downloaded/Ricker et al. - 2014 - Sensitivity of CryoSat-2 Arctic sea-ice freeboard and thickness on radar-waveform interpretation.pdf:pdf},
issn = {1994-0424},
journal = {The Cryosphere},
