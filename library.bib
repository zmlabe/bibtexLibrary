@article{kiem10,
abstract = {Since the mid-1990s the majority of Victoria,
Australia, has experienced severe drought conditions
(i.e. the 'Big Dry') characterized by streamflow
that is the lowest in approximately 80 years of
record. While decreases in annual and seasonal
