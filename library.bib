journal = {Climate Dynamics},
keywords = {Decadal variability; Sea surface temperatures; Wes},
month = {aug},
number = {3-4},
pages = {419--440},
publisher = {SPRINGER},
title = {{Sahel rainfall and decadal to multi-decadal sea surface temperature variability}},
volume = {37},
year = {2011}
}
