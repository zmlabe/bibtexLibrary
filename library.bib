   publisher = {John Wiley & Sons, Ltd},
   title = {Dynamic Simulation as an Approach to Understanding Hurricane Risk Response: Insights from the Stormview Lab},
   volume = {33},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1111/j.1539-6924.2012.01935.x https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1539-6924.2012.01935.x https://onlinelibrary.wiley.com/doi/10.1111/j.1539-6924.2012.01935.x},
