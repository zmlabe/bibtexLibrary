journal = {Journal of Climate},
keywords = {Atmospheric circulation,Circulation/Dynamics,Climate variability,Forcing,Interannual variability,Physical Meteorology and Climatology,Stationary waves,Teleconnections,Variability},
month = {oct},
number = {20},
pages = {7329--7343},
publisher = {American Meteorological Society},
title = {{Investigating Possible Arctic–Midlatitude Teleconnections in a Linear Framework}},
