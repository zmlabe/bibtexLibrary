@article{castro07_partI,
abstract = {Fifty-three years of the NCEP-NCAR Reanalysis I are
dynamically downscaled using the Regional
Atmospheric Modeling System (RAMS) to generate a
regional climate model (RCM) climatology of the
contiguous United States and Mexico. Data from the
RAMS simulations are compared to the recently
