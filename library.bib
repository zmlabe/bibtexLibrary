   city = {233 SPRING STREET, NEW YORK, NY 10013 USA},
   doi = {10.1007/s00382-005-0017-4},
   issue = {7-8},
   journal = {Climate Dynamics},
   month = {6},
   pages = {741-758},
   publisher = {SPRINGER},
   title = {Trends and variability in column-integrated atmospheric water vapor},
   volume = {24},
   year = {2005},
}
@article{durack12,
   abstract = {Fundamental thermodynamics and climate models
suggest that dry regions will become drier and wet
