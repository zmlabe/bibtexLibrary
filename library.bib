}
@article{graumlich03,
abstract = {Climate variability, coupled with increasing demand
is raising concerns about the sustainability of
water resources in the western United
States. Tree-ring reconstructions of stream flow
that extend the observational record by several
centuries provide critical information on the
short-term variability and multi-decadal trends in
water resources. In this study, precipitation
sensitive Douglas-fir ( Pseudotsuga menzeisii) tree
ring records are used to reconstruct annual flow of
