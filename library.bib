@article{white06,
   abstract = {[1] The quasi-decadal oscillation (QDO) in the
Earth's climate system fluctuated in phase with the
11-year period signal in solar total irradiance
(STI) variability throughout the 20th century. The
QDO was associated with global average upper ocean
temperature variability dominated by the tropical
