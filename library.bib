@article{wang05,
abstract = {A 5-year-resolution absolute-dated oxygen isotope
record from Dongge Cave, southern China, provides a
continuous history of the Asian monsoon over the
past 9000 years. Although the record broadly follows
summer insolation, it is punctuated by eight weak
monsoon events tasting similar to 1 to 5
centuries. One correlates with the "8200-year"
