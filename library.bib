@article{dai04,
   abstract = {A monthly dataset of Palmer Drought Severity Index
(PDSI) from 1870 to 2002 is derived using historical
precipitation and temperature data for global land
areas on a 2.58 grid. Over Illinois, Mongolia, and
parts of China and the former Soviet Union, where
soil moisture data are available, the PDSI is
