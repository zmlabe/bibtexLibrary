@article{tolwinski10,
   abstract = {We present a simple, efficient, process-based
forward model of tree-ring growth, called
Vaganov#Shashkin-Lite (VS-Lite), that requires as
inputs only latitude and monthly temperature and
precipitation. Simulations of six bristlecone pine
