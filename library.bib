   pages = {115-126},
   publisher = {ELSEVIER SCI LTD},
   title = {Informing adaptation responses to climate change through theories of transformation},
   volume = {22},
   year = {2012},
}
@article{tourre06,
   abstract = {Oceanic global and individual basin (i.e., Indian,
