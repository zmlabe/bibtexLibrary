doi = {10.1038/s41586-019-1465-z},
file = {:Users/zlabe/Library/Application Support/Mendeley Desktop/Downloaded/Lee, Williams, Frame - 2019 - Increased shear in the North Atlantic upper-level jet stream over the past four decades.pdf:pdf},
issn = {1476-4687},
journal = {Nature 2019},
keywords = {Atmospheric dynamics,Climate change},
month = {aug},
pages = {1--4},
publisher = {Nature Publishing Group},
title = {{Increased shear in the North Atlantic upper-level jet stream over the past four decades}},
