author = {Griffiths, M L and Drysdale, R N and Gagan, M K and Zhao, J -X. and Ayliffe, L K and Hellstrom, J C and Hantoro, W S and Frisia, S and Feng, Y -X. and Cartwright, I and Pierre, E St. and Fischer, M J and Suwargadi, B W},
doi = {10.1038/NGEO605},
journal = {Nature Geoscience},
month = {sep},
number = {9},
pages = {636--639},
publisher = {Nature PUBLISHING GROUP},
title = {{Increasing Australian-Indonesian monsoon rainfall linked to early Holocene sea-level rise}},
volume = {2},
year = {2009}
}
