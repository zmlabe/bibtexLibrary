@article{stgeorge_and_ault11,
abstract = {The central Pacific Coast of the United States is
one of the few regions in North America where
precipitation exhibited a high proportion of
variance at decadal time scales (10 to 20 years)
during the last century. We use a network of tree
ring-width records to estimate the behavior of the
observed decadal pattern in regional winter
precipitation during the last three and a half
