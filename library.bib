@article{hurtt06,
   abstract = {To accurately assess the impacts of human land use
on the Earth system, information is needed on the
current and historical patterns of land-use
activities. Previous global studies have focused on
developing reconstructions of the spatial patterns
of agriculture. Here, we provide the first global
gridded estimates of the underlying land conversions
(land-use transitions), wood harvesting, and
resulting secondary lands annually, for the period
