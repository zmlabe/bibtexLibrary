   keywords = {homogenisation,reanalyses,temperature,trends},
   month = {2},
   pages = {736-760},
   publisher = {John Wiley & Sons, Ltd},
   title = {Assessing homogeneity of land surface air temperature observations using sparse-input reanalyses},
   volume = {43},
