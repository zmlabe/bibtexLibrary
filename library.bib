@article{Cook2009,
   abstract = {North Pacific climate variability is characterized by pronounced band-limited multi-decadal (e.g., 20-40 years) variability and apparent regime shifts in instrumental sea level pressure and sea surface temperature (SST) records. This variability is commonly expressed in index form as the Pacific Decadal Oscillation (PDO). The state of the PDO has strong impacts on local climate along the North Pacific Rim, as well as on climate downstream across large parts of North America. The PDO is based on SST records that only extend back to the mid-19th century at best, with the most commonly used version of the index beginning in 1900. Robustly characterizing multi-decadal variability in such short records is a serious statistical challenge. In addition, the observed behavior of the PDO may be significantly contaminated by the effects of greenhouse warming, especially during the latter half of the 20th century. This makes the description of the PDO as a long-term natural mode of North Pacific climate variability uncertain as well. Annually resolved and exactly dated tree-ring records from western North America and sensitive to north Pacific climate variability and change can be used to extend the short instrumental PDO back several centuries to a millennium now. Several such PDO reconstructions exist now, each with robustly expressed long-term, band-limited, multi-decadal variability similar to that found in the instrumental data, but they do not all agree in the pre-1900 period not used for calibration. This appears to be due to systematic low-frequency differences between PDO reconstructions depending on the geographic locations of the tree-ring chronologies used, principally those north and south of 40°N. These differences appear to come and go back in time at near-centennial time scales. This suggests that the spatial impact of the PDO on North American climate varies over time in ways not possible to discern from the instrumental data. It also suggests that care must be taken in selecting which published PDO reconstruction is used for further studies of North Pacific climate variability.},
   author = {E R Cook},
   journal = {American Geophysical Union},
   keywords = {[1616] GLOBAL CHANGE / Climate variability,[4513] OCEANOGRAPHY: PHYSICAL / Decadal ocean vari,[4920] PALEOCEANOGRAPHY / Dendrochronology},
   title = {North Pacific Climate Variability over the Past Millennium from Long Tree-Ring Records (Invited)},
   url = {http://adsabs.harvard.edu/abs/2009AGUFMPP12C..01C},
   year = {2009},
}
@article{kirby05,
   abstract = {There are very few terrestrial palaeoclimate
archives spanning the Last Glacial Maximum through
the Holocene from coastal southern California. Yet,
knowledge of past climate dynamics is critical for
assessing present and future constraints on the
region's dwindling freshwater resources. We present
initial results from two drill cores extracted from
the present-day edge of Lake Elsinore, southern
California's largest natural lake. Using a
multiproxy approach including lithologic
description, mass magnetic susceptibility, LOI 550
degrees C (total organic matter), and LOI 950
degrees C (total carbonate), we infer first-order,
long-term climate change over the past 19 250
calendar years. Furthermore, we suggest possible
first-order forcing mechanisms that drive this
change, which include presence/absence of
continental ice sheets, insolation, and complex
ocean-atmosphere interactions. Our results indicate
four distinct millennial-scale climate modes over
the past 19 250 calendar years. These modes include
a wet Last Glacial Maximum (19 250-17 120 cal. yr
BP), a relatively dry late-Glacial/Holocene
transition (17120-9450 cal. yr BP), a wet early
Holocene (9450-7670 cal. yr BP), and a highly
variable mid-to-late Holocene climate (i.e.,
alternating wet/dry cycles; 7670 cal. yr
BP-present). We attribute the mid-to-late Holocene
climate interval to the onset of El Nino-Southern
Oscillation ca. 7000 cal. yr BP and a more vigorous
hydrologic system. These results are supported by a
variety of regional terrestrial and marine
palaeoclimate archives. Copyright (c) 2005 John
Wiley T Sons, Ltd.},
   author = {M E Kirby and S P Lund and C J Poulsen},
   issue = {3},
   journal = {Journal of Quaternary Science},
   keywords = {lake elsinore sedimentology southern california cl},
   pages = {239-254},
   title = {Hydrologic variability and the onset of modern El Nino Southern Oscillation: a 19,250-year record from Lake Elsinore, southern California},
   volume = {20},
   year = {2005},
}
@article{rybski08,
   abstract = {We study the appearance of long-term persistence in
temperature records, obtained from the global
coupled general circulation model ECHO-G for two
runs, using detrended fluctuation analysis. The
first run is a historical simulation for the years
1000--1990 (with greenhouse gas, solar, and volcanic
