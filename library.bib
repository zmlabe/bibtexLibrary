doi = {10.5194/gmd-9-1937-2016},
file = {:Users/zlabe/Library/Application Support/Mendeley Desktop/Downloaded/Eyring et al. - 2016 - Overview of the Coupled Model Intercomparison Project Phase 6 (CMIP6) experimental design and organization.pdf:pdf},
