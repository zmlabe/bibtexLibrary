   keywords = {ECMWF,ERA5,climate reanalysis,data assimilation},
   month = {7},
   publisher = {John Wiley & Sons, Ltd},
   title = {The ERA5 global reanalysis from 1940 to 2022},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1002/qj.4803 https://onlinelibrary.wiley.com/doi/abs/10.1002/qj.4803 https://rmets.onlinelibrary.wiley.com/doi/10.1002/qj.4803},
