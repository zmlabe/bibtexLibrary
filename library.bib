@article{rybski08,
abstract = {We study the appearance of long-term persistence in
temperature records, obtained from the global
coupled general circulation model ECHO-G for two
runs, using detrended fluctuation analysis. The
first run is a historical simulation for the years
1000--1990 (with greenhouse gas, solar, and volcanic
