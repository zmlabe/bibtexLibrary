   keywords = {hydrological stresses; climate change; food securi},
   month = {1},
   pages = {226-246},
   publisher = {ELSEVIER SCIENCE BV},
   title = {A review of historic and future hydrological changes in the Murray-Darling Basin},
   volume = {80-81},
