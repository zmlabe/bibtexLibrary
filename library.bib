@article{barnett08,
   abstract = {Observations have shown that the hydrological cycle
of the western United States changed significantly
over the last half of the 20th century. We present a
regional, multivariable climate change detection and
attribution study, using a high- resolution
hydrologic model forced by global climate models,
focusing on the changes that have already affected
