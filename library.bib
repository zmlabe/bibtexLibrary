@article{webb93,
abstract = {A standardized global data set of soil horizon
thicknesses and textures (particle size
distributions) has been compiled from the Food and
Agriculture Organization of the United
Nations/United Nations Educational, Scientific, and
Cultural Organization (FAO/UNESCO) Soil Map of the
