author = {Foster, G and Annan, J D and Jones, P D and Mann, M E and Mullan, B and Renwick, J and Salinger, J and Schmidt, G A and Trenberth, K E},
doi = {10.1029/2009JD012960},
journal = {Journal of Geophysical Research-Atmospheres},
