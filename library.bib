issn = {17489326},
journal = {Environmental Research Letters},
keywords = {SMILEs,internal variability,large ensembles,mid-term projections,model differences,short-term projections,surface temperature},
month = {may},
number = {5},
pages = {054014},
publisher = {Institute of Physics Publishing},
title = {{Quantifying the role of internal variability in the temperature we expect to observe in the coming decades}},
