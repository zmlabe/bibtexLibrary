   url = {https://onlinelibrary.wiley.com/doi/full/10.1029/2019JD031405 https://onlinelibrary.wiley.com/doi/abs/10.1029/2019JD031405 https://agupubs.onlinelibrary.wiley.com/doi/10.1029/2019JD031405},
