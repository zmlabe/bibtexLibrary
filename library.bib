author = {Ummenhofer, Caroline C and {Sen Gupta}, Alexander and Briggs, Peter R and England, Matthew H and McIntosh, Peter C and Meyers, Gary A and Pook, Michael J and Raupach, Michael R and Risbey, James S},
doi = {10.1175/2010JCLI3475.1},
journal = {Journal of Climate},
month = {mar},
