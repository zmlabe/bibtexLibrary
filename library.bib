issn = {14764687},
journal = {Nature},
keywords = {Humanities and Social Sciences,Science,multidisciplinary},
month = {jan},
number = {7174},
pages = {53--56},
publisher = {Nature Publishing Group},
title = {{Vertical structure of recent Arctic warming}},
volume = {451},
year = {2008}
}
@article{adams03,
abstract = {Past studies have suggested a statistical connection
